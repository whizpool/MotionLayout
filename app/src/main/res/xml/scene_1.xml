<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:onTouchUp="autoComplete"
            motion:touchRegionId="@id/textView1" />
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/backgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#c5cae8" />
        </Constraint>

        <Constraint
            android:id="@+id/textView1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:rotation="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#3F51B5" />
        </Constraint>

        <Constraint
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:alpha="0"
            android:rotationX="-20"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:alpha="0"
            android:rotationX="-20"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/textView4"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:alpha="0"
            android:rotationX="-20"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@+id/backgroundView">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#dcedc8" />
        </Constraint>

        <Constraint
            android:id="@+id/textView1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:rotation="-90"
            android:translationX="-280dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/colorPrimaryDark" />
        </Constraint>

        <Constraint
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:alpha="1"
            android:rotationX="0"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#8BC34A" />
        </Constraint>

        <Constraint
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:alpha="0"
            android:rotationX="-20"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/textView4"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:alpha="0"
            android:rotationX="-20"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>


    <Transition
        motion:constraintSetEnd="@+id/end1"
        motion:constraintSetStart="@+id/end">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:onTouchUp="autoComplete"
            motion:touchRegionId="@id/textView2" />
    </Transition>

    <ConstraintSet android:id="@+id/end1">

        <Constraint android:id="@+id/backgroundView">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#b2dfdb" />
        </Constraint>

        <Constraint
            android:id="@+id/textView1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:rotation="-90"
            android:translationX="-280dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:rotation="-90"
            android:translationX="-280dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/colorPrimaryDark" />
        </Constraint>

        <Constraint
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:alpha="1"
            android:rotationX="0"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#009688" />
        </Constraint>

        <Constraint
            android:id="@+id/textView4"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:alpha="0"
            android:rotationX="-20"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>


    <Transition
        motion:constraintSetEnd="@+id/end2"
        motion:constraintSetStart="@+id/end1">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:onTouchUp="autoComplete"
            motion:touchRegionId="@id/textView2" />
    </Transition>

    <ConstraintSet android:id="@+id/end2">

        <Constraint android:id="@+id/backgroundView">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#ffe0b2" />
        </Constraint>

        <Constraint
            android:id="@+id/textView1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:rotation="-90"
            android:translationX="-280dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:rotation="-90"
            android:translationX="-280dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:rotation="-90"
            android:translationX="-280dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/colorPrimaryDark" />
        </Constraint>

        <Constraint
            android:id="@+id/textView4"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:alpha="1"
            android:rotationX="0"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>